
@model ClientSecretsDetailsViewModel

@{
    ViewData["Title"] = "Client Secrets";
}

<h1>Client Secrets</h1>

<div class="row">
    <div class="col-lg-12">
        <input type="hidden" asp-for="ClientId" />
        <label>ClientID: </label> @Model.ClientIdString <br />
        <label>Client Name: </label> @Model.ClientName <br />
    </div>
</div>

<a asp-action="Add" asp-route-clientid="@Model.ClientId">Add</a>

<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered">
            <tr>
                <th>Type</th>
                <th>Value</th>
                <th>Description</th>
                <th></th>
            </tr>

            @for (var i = 0; i < Model.Secrets.Count; i++)
            {
                var row = Model.Secrets[i];
                <tr>
                    <td>@row.Type</td>
                    <td>@row.Value</td>
                    <td>@row.Description</td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@row.Id" asp-route-clientid="@Model.ClientId">Delete</a>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>