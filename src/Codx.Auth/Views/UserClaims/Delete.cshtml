@model UserClaimDeleteViewModel

@{
    ViewData["Title"] = "Delete";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Home</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index","Users")">Users</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("UserClaims","UserClaims", new { userid = Model.UserId})">User Claims</a></li>
        <li class="breadcrumb-item active" aria-current="page">Delete</li>
    </ol>
</nav>


<div class="row">
    <div class="col-lg-12">

        <div class="card">
            <div class="card-header">
                Are you sure you want to delete this record?
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-12">

                        <partial name="_ValidationSummary" />

                    </div>
                </div>

                <form asp-action="Delete">

                    <input type="hidden" asp-for="@Model.UserId" />
                    <input type="hidden" asp-for="@Model.Username" />
                    <input type="hidden" asp-for="@Model.ClaimType" />
                    <input type="hidden" asp-for="@Model.ClaimValue" />

                    <div class="form-group">
                        <label>Username</label>
                        <input asp-for="@Model.Username" class="form-control" disabled />
                    </div>

                    <div class="form-group">
                        <label>Claim Type</label>
                        <input asp-for="@Model.ClaimType" class="form-control" disabled />
                    </div>

                    <div class="form-group">
                        <label>Claim Value</label>
                        <input asp-for="@Model.ClaimValue" class="form-control" disabled />
                    </div>

                    <div class="form-group">
                        <a asp-action="UserClaims" asp-controller="UserClaims" asp-route-userid="@Model.UserId" class="btn btn-info">Cancel</a>
                        <input type="submit" class="btn btn-primary" value="YES" />
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
