                <div class="row">
                    <div class="col-lg-12">

                        <partial name="_ValidationSummary" />

                    </div>
                </div>

                <form asp-action="Add">

                    <input type="hidden" asp-for="@Model.CompanyId" />

                    <div class="form-group">
                        <label>User Email</label>
                        <input asp-for="@Model.UserEmail" class="form-control" />
                    </div>

               @*      <div class="form-group">
                        <input type="submit" name="action" class="btn btn-primary" value="Search" />
                    </div>

                    <div class="form-group">
                        <label>User ID</label>
                        <input asp-for="UserId" class="form-control" readonly />
                    </div>

                    <div class="form-group">
                        <label>Username</label>
                        <input asp-for="UserName" class="form-control" readonly />
                    </div>                    *@

                    <div class="form-group">
                        <input type="submit" name="action" class="btn btn-primary" value="Save" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
