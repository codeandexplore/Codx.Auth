
@model List<Codx.Auth.ViewModels.RoleViewModels.RoleDetailsViewModel>


@{
    ViewData["Title"] = "Roles";
}

<h1>Roles</h1>

<a asp-action="Add">Add</a>

<div class="row">

    <div class="col-lg-12">

        <table class="table table-bordered">
            <tr>
                <th>Name</th>
                <th></th>
            </tr>

            @for (var i = 0; i < Model.Count; i++)
            {
                var row = Model[i];
                <tr>
                    <td>@row.Name</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@row.Id">Edit</a>
                        <a asp-action="Delete" asp-route-id="@row.Id">Delete</a>
                    </td>
                </tr>

            }

        </table>

    </div>

</div>