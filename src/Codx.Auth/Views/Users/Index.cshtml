
@model List<Codx.Auth.ViewModels.UserViewModels.UserDetailsViewModel>


@{
    ViewData["Title"] = "Users";
}

<h1>Users</h1>

<div class="row">

    <div class="col-lg-12">

        <table class="table table-bordered">
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Email</th>
            </tr>

            @for (var i = 0; i < Model.Count; i++)
            {
                var row = Model[i];
                <tr>
                    <td>@row.Id</td>
                    <td>@row.Username</td>
                    <td>@row.Email</td>
                </tr>

            }

        </table>

    </div>

</div>