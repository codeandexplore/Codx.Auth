
@model List<Codx.Auth.ViewModels.UserViewModels.UserDetailsViewModel>


@{
    ViewData["Title"] = "Users";
}

<h1>Users</h1>

<a asp-action="Add">Add</a>

<div class="row">

    <div class="col-lg-12">

        <table class="table table-bordered">
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th></th>
            </tr>

            @for (var i = 0; i < Model.Count; i++)
            {
                var row = Model[i];
                <tr>                 
                    <td>@row.Username</td>
                    <td>@row.Email</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@row.Id">Edit</a>
                        <a asp-controller="UserRoles" asp-action="UserRoles" asp-route-userid="@row.Id">Roles</a>
                        <a asp-action="Delete" asp-route-id="@row.Id">Delete</a>
                    </td>
                </tr>

            }

        </table>

    </div>

</div>