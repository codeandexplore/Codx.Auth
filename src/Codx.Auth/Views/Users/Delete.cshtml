
@model Codx.Auth.ViewModels.UserViewModels.UserEditViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Are you sure you want to delete this record?</h1>

<div class="row">
    <div class="col-lg-6">

        <form asp-action="Delete">

            <div class="form-group">
                <label>Username</label>
                <input asp-for="@Model.Username" class="form-control" disabled />
            </div>

            <div class="form-group">
                <label>Email</label>
                <input asp-for="@Model.Email" class="form-control" disabled />
            </div>

            <div class="form-group">
                <a asp-action="Index" class="btn btn-info">Cancel</a>
                <input type="submit" class="btn btn-primary" value="YES" />
            </div>

        </form>

    </div>
</div>