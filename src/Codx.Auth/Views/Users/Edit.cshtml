
@model Codx.Auth.ViewModels.UserViewModels.UserEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>


<div class="row">
    <div class="col-lg-6">
        
        <div class="row">
            <div class="col-lg-12">

                <partial name="_ValidationSummary" />

            </div>
        </div>
        
        <form asp-action="Edit">

            <div class="form-group">
                <label>Username</label>
                <input type="hidden" asp-for="@Model.Username" />
                <input asp-for="@Model.Username" class="form-control" disabled />
            </div>

            <div class="form-group">
                <label>Email</label>
                <input asp-for="@Model.Email" class="form-control" />
            </div>

            <div class="form-group">
                <a asp-action="Index" class="btn btn-info">Cancel</a>
                <input type="submit" class="btn btn-primary" value="Save" />
            </div>

        </form>

    </div>
</div>