@model IdentityResourceClaimAddViewModel

@{
    ViewData["Title"] = "Add";
}

<h1>Add</h1>

<div class="row">
    <div class="col-lg-6">

        <div class="row">
            <div class="col-lg-12">

                <partial name="_ValidationSummary" />

            </div>
        </div>

        <form asp-action="Add">

            <input type="hidden" asp-for="@Model.IdentityResourceId" />

            <div class="form-group">
                <label>Name</label>
                <input asp-for="@Model.Name" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label> Type</label>
                <input asp-for="Type" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Save" />
            </div>

        </form>

    </div>
</div>