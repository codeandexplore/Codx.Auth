@model UserCompanyEditViewModel

@{
    ViewData["Title"] = "Delete";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Home</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Details","Users", new { id = Model.UserId})">Users</a></li>
        <li class="breadcrumb-item active" aria-current="page">Remove User Company</li>
    </ol>
</nav>

<div class="row">
    <div class="col-lg-12">

        <div class="card">
            <div class="card-header">
                Are you sure you want to delete this record?
            </div>
            <div class="card-body">

                <form asp-action="Delete">

                    <input type="hidden" asp-for="@Model.CompanyId" />
                    <input type="hidden" asp-for="@Model.UserId" />

                    <div class="form-group">
                        <label>Company</label>
                        <input asp-for="@Model.CompanyName" class="form-control" readonly />
                    </div>

                    <div class="form-group">
                        <label>Tenant</label>
                        <input asp-for="@Model.TenantName" class="form-control" readonly />
                    </div>

                    <div class="form-group">
                        <a asp-action="Details" asp-controller="Users" asp-route-id="@Model.UserId" class="btn btn-info">Cancel</a>
                        <input type="submit" class="btn btn-primary" value="YES" />
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
