@model LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "_BlankLayout";
}

<div class="login_wrapper">
   
    <div class="row">

        @if (Model.EnableLocalLogin)
        {
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h2>Login</h2>
                    </div>

                    <div class="card-body">
                        @* Show resend verification email option if email is not confirmed - placed outside login form to avoid nested forms *@
                        @if (TempData["UnverifiedEmail"] != null)
                        {
                            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                                <h5><i class="fas fa-exclamation-triangle me-2"></i>Email Not Verified</h5>
                                <p class="mb-2">Your email address hasn't been verified yet. Please check your inbox for the verification link.</p>
                                <p class="mb-2"><strong>Didn't receive the email?</strong></p>
                                <form asp-action="ResendEmailVerification" method="post" class="d-inline">
                                    <input type="hidden" name="email" value="@TempData.Peek("UnverifiedEmail")" />
                                    <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
                                    <button type="submit" class="btn btn-sm btn-warning">
                                        <i class="fas fa-redo me-2"></i>Resend Verification Email
                                    </button>
                                </form>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        }

                        <form asp-route="Login">
                            <input type="hidden" asp-for="ReturnUrl" />

                            <partial name="_ValidationSummary" />

                            <div class="form-group">
                                <input class="form-control" placeholder="Username" asp-for="Username" autofocus>
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" placeholder="Password" asp-for="Password" autocomplete="off">
                            </div>
                            @if (Model.AllowRememberLogin)
                            {
                                <div class="form-group">
                                    <div class="form-check">
                                        <input class="form-check-input" asp-for="RememberLogin">
                                        <label class="form-check-label" asp-for="RememberLogin">
                                            Remember My Login
                                        </label>
                                    </div>
                                </div>
                            }

                            <button class="btn btn-primary" name="button" value="login">Login</button>
                            <button class="btn btn-secondary" name="button" value="cancel">Cancel</button>
                        </form>
                        <div class="mt-3">
                            <a asp-controller="Account" asp-action="Register" class="register-link-small">Don't have an account? Register</a>
                        </div>

                        <hr />

                        @if (Model.VisibleExternalProviders.Any())
                        {
                            <ul class="list-inline">
                                @foreach (var provider in Model.VisibleExternalProviders)
                                {
                                    <li class="list-inline-item">
                                        <a class="btn btn-outline-primary"
                                           asp-controller="External"
                                           asp-action="Challenge"
                                           asp-route-scheme="@provider.AuthenticationScheme"
                                           asp-route-returnUrl="@Model.ReturnUrl">
                                            Sign In with @provider.DisplayName
                                        </a>
                                    </li>
                                }
                            </ul>
                        }
                    </div>
                </div>
            </div>
        }

       @*  @if (Model.VisibleExternalProviders.Any())
        {
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h2>External Account</h2>
                    </div>
                    <div class="card-body">
                        <ul class="list-inline">
                            @foreach (var provider in Model.VisibleExternalProviders)
                            {
                                <li class="list-inline-item">
                                    <a class="btn btn-secondary"
                                       asp-controller="External"
                                       asp-action="Challenge"
                                       asp-route-scheme="@provider.AuthenticationScheme"
                                       asp-route-returnUrl="@Model.ReturnUrl">
                                       Sign In with @provider.DisplayName
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        } *@

        @if (!Model.EnableLocalLogin && !Model.VisibleExternalProviders.Any())
        {
            <div class="alert alert-warning">
                <strong>Invalid login request</strong>
                There are no login schemes configured for this request.
            </div>
        }
    </div>


</div>
