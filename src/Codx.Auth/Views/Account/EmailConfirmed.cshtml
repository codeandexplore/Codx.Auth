@model Codx.Auth.ViewModels.Account.EmailConfirmedViewModel
@{
    ViewData["Title"] = Model.Success ? "Email Confirmed" : "Email Confirmation Failed";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow mt-5">
                <div class="card-header @(Model.Success ? "bg-success" : "bg-danger") text-white text-center">
                    <h4 class="mb-0">
                        <i class="fas @(Model.Success ? "fa-check-circle" : "fa-times-circle") me-2"></i>
                        @(Model.Success ? "Email Confirmed!" : "Confirmation Failed")
                    </h4>
                </div>
                <div class="card-body p-4">
                    @if (Model.Success)
                    {
                        <div class="text-center mb-4">
                            <i class="fas fa-check-circle fa-5x text-success mb-3"></i>
                            <h5 class="text-success">Your email has been successfully verified!</h5>
                        </div>

                        <div class="alert alert-success">
                            <i class="fas fa-info-circle me-2"></i>
                            @Model.Message
                        </div>

                        <div class="card bg-light mb-4">
                            <div class="card-body">
                                <h6 class="card-title"><i class="fas fa-check me-2"></i>What's Next?</h6>
                                <ul class="mb-0">
                                    <li>You can now sign in to your account</li>
                                    <li>Access all features and services</li>
                                    <li>Your account is fully activated</li>
                                </ul>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <a asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-success btn-lg">
                                <i class="fas fa-sign-in-alt me-2"></i>
                                Sign In Now
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="text-center mb-4">
                            <i class="fas fa-times-circle fa-5x text-danger mb-3"></i>
                            <h5 class="text-danger">Email Confirmation Failed</h5>
                        </div>

                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            @Model.Message
                        </div>

                        <div class="card bg-light mb-4">
                            <div class="card-body">
                                <h6 class="card-title"><i class="fas fa-question-circle me-2"></i>What Can You Do?</h6>
                                <ul class="mb-0">
                                    <li>Request a new verification email</li>
                                    <li>Make sure you're using the latest link</li>
                                    <li>Contact support if the problem persists</li>
                                </ul>
                            </div>
                        </div>

                        <div class="d-grid gap-2 mb-3">
                            <a asp-action="Login" class="btn btn-primary">
                                <i class="fas fa-arrow-left me-2"></i>
                                Back to Login
                            </a>
                        </div>

                        <div class="text-center">
                            <p class="text-muted">Need help?</p>
                            <a href="#" class="btn btn-outline-secondary">
                                <i class="fas fa-life-ring me-2"></i>
                                Contact Support
                            </a>
                        </div>
                    }
                </div>
            </div>

            <div class="text-center mt-3">
                <p class="text-muted small">
                    <i class="fas fa-shield-alt me-1"></i>
                    Your security is our priority.
                </p>
            </div>
        </div>
    </div>
</div>
