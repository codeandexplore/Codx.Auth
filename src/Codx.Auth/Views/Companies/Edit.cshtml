@model CompanyEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Home</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index","Tenants")">Tenants</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Details","Tenants", new { id = Model.TenantId})">Details</a></li>
        <li class="breadcrumb-item active" aria-current="page">Edit Company</li>
    </ol>
</nav>


<div class="row">
    <div class="col-lg-12">

        <div class="card">
            <div class="card-header">
                Edit Company
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-12">

                        <partial name="_ValidationSummary" />

                    </div>
                </div>

                <form asp-action="Edit">

                    <input type="hidden" asp-for="@Model.Id" />
                    <input type="hidden" asp-for="@Model.TenantId" />

                    <div class="form-group">
                        <label>Name</label>
                        <input asp-for="@Model.Name" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>Email</label>
                        <input asp-for="@Model.Email" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Phone</label>
                        <input asp-for="@Model.Phone" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Address</label>
                        <input asp-for="@Model.Address" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        <input asp-for="@Model.Description" class="form-control" />
                    </div>

                    <div class="form-group">
                        <a asp-action="Details" asp-controller="Tenants" asp-route-id="@Model.TenantId" class="btn btn-info">Cancel</a>
                        <input type="submit" class="btn btn-primary" value="Save" />
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

