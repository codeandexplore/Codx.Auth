        }
        function clientCorsOriginRowActionButtons(index, row) {
            return '<a class="btn btn-outline-info btn-sm" href="/ClientCorsOrigins/Details/' + row.id + '" title="Show record details"><i class="fa fa-file-alt"></i></a> ' +
                '<a class="btn btn-outline-warning btn-sm" href="/ClientCorsOrigins/Edit/' + row.id + '" title="Edit this record"><i class="fa fa-edit"></i></a> ' +
                '<a class="btn btn-outline-danger btn-sm" href="/ClientCorsOrigins/Delete/' + row.id +'" title="Delete this record"><i class="fa fa-trash-alt"></i></a>'
        }

    </script>

}