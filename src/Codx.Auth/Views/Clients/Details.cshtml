                '<a class="btn btn-outline-warning btn-sm" href="/ClientGrantTypes/Edit/' + row.id + '" title="Edit this record"><i class="fa fa-edit"></i></a> ' +
                '<a class="btn btn-outline-danger btn-sm" href="/ClientGrantTypes/Delete/' + row.id +'" title="Delete this record"><i class="fa fa-trash-alt"></i></a>'
        }

    </script>

    <script>
        function clientScopeAjaxRequest(params) {
