                '<a class="btn btn-outline-warning btn-sm" href="/ClientScopes/Edit/' + row.id + '" title="Edit this record"><i class="fa fa-edit"></i></a> ' +
                '<a class="btn btn-outline-danger btn-sm" href="/ClientScopes/Delete/' + row.id +'" title="Delete this record"><i class="fa fa-trash-alt"></i></a>'
