
@model ClientEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>


<div class="row">
    <div class="col-lg-12">

        <div class="row">
            <div class="col-lg-12">

                <partial name="_ValidationSummary" />

            </div>
        </div>

        <form asp-action="Edit">

            <input type="hidden" asp-for="@Model.Id" />

            <div class="row">
                <div class="col-lg-12">

                    <div class="row">
                        <div class="col-lg-6">


                            <div class="form-group">
                                <label>Client ID</label>
                                <input asp-for="@Model.ClientId" class="form-control" />
                            </div>

                            <div class="form-group">
                                <label>Client Name</label>
                                <input asp-for="@Model.ClientName" class="form-control" />
                            </div>

                            <div class="form-group">
                                <label>Description</label>
                                <input asp-for="@Model.Description" class="form-control" />
                            </div>



                            <div class="form-group">
                                <label>ClientUri</label>
                                <input asp-for="@Model.ClientUri" class="form-control" />
                            </div>

                            <div class="form-group">
                                <label>LogoUri</label>
                                <input asp-for="@Model.LogoUri" class="form-control" />
                            </div>

                            <div class="form-group">
                                <label>EnableLocalLogin</label>
                                <input asp-for="@Model.EnableLocalLogin" class="form-control" />
                            </div>

                            <div class="form-group">
                                <label>AllowOfflineAccess</label>
                                <input asp-for="@Model.AllowOfflineAccess" class="form-control" />
                            </div>


                            <div class="form-group">
                                <label>FrontChannelLogoutSessionRequired</label>
                                <input asp-for="@Model.FrontChannelLogoutSessionRequired" class="form-control" />
                            </div>

                            <div class="form-group">
                                <label>FrontChannelLogoutUri</label>
                                <input asp-for="@Model.FrontChannelLogoutUri" class="form-control" />
                            </div>

                            <div class="form-group">
                                <label>BackChannelLogoutSessionRequired</label>
                                <input asp-for="@Model.BackChannelLogoutSessionRequired" class="form-control" />
                            </div>

                            <div class="form-group">
                                <label>BackChannelLogoutUri</label>
                                <input asp-for="@Model.BackChannelLogoutUri" class="form-control" />
                            </div>


                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-6">




                        </div>
                        <div class="col-lg-6">




                        </div>
                    </div>


                </div>
            </div>





            <div class="form-group">
                <a asp-action="Index" class="btn btn-info">Cancel</a>
                <input type="submit" class="btn btn-primary" value="Save" />
            </div>

        </form>

    </div>
</div>