@model CompanyEditViewModel

@{
    ViewData["Title"] = "Delete";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Home</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index","MyProfile")">My Profile</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("ManageTenant","MyProfile", new { id = Model.TenantId})">Manage Tenant</a></li>
        <li class="breadcrumb-item active" aria-current="page">Delete Company</li>
    </ol>
</nav>

<div class="row">
    <div class="col-lg-12">

        <div class="card">
            <div class="card-header">
                Are you sure you want to delete this record?
            </div>
            <div class="card-body">

                <form asp-action="ManageTenantCompanyDelete">

                    <input type="hidden" asp-for="@Model.TenantId" />

                    <div class="form-group">
                        <label>Name</label>
                        <input asp-for="@Model.Name" class="form-control" readonly />
                    </div>

                    <div class="form-group">
                        <label>Email</label>
                        <input asp-for="@Model.Email" class="form-control" readonly />
                    </div>

                    <div class="form-group">
                        <label>Phone</label>
                        <input asp-for="@Model.Phone" class="form-control" readonly />
                    </div>

                    <div class="form-group">
                        <label>Address</label>
                        <input asp-for="@Model.Address" class="form-control" readonly />
                    </div>

                    <div class="form-group">
                        <label>Description</label>
                        <input asp-for="@Model.Description" class="form-control" readonly />
                    </div>


                    <div class="form-group">
                        <a asp-action="ManageTenant" asp-controller="MyProfile" asp-route-id="@Model.TenantId" class="btn btn-info">Cancel</a>
                        <input type="submit" class="btn btn-primary" value="YES" />
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
