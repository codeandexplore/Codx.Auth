@model CompanyUserEditViewModel

@{
    ViewData["Title"] = "Delete";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Home</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index","MyProfile")">My Profile</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("ManageTenantCompanyDetails","MyProfile", new { id = Model.CompanyId})">Company</a></li>
        <li class="breadcrumb-item active" aria-current="page">Delete User</li>
    </ol>
</nav>

<div class="row">
    <div class="col-lg-12">

        <div class="card">
            <div class="card-header">
                Are you sure you want to delete this record?
            </div>
            <div class="card-body">

                <form asp-action="ManageTenantCompanyUserDelete">

                    <input type="hidden" asp-for="@Model.CompanyId" />
                    <input type="hidden" asp-for="@Model.UserId" />

                    <div class="form-group">
                        <label>Email</label>
                        <input asp-for="@Model.UserEmail" class="form-control" readonly />
                    </div>

                    <div class="form-group">
                        <a asp-action="Details" asp-controller="Companies" asp-route-id="@Model.CompanyId" class="btn btn-info">Cancel</a>
                        <input type="submit" class="btn btn-primary" value="YES" />
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
