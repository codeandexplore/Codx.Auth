

@model UserRolesDetailsViewModel

@{
    ViewData["Title"] = "User Roles";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Home</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index","Users")">Users</a></li>
        <li class="breadcrumb-item active" aria-current="page">User Roles</li>
    </ol>
</nav>

<div class="row">
    <div class="col-lg-12">

        <div class="card">    
            <div class="card-body">

                <div class="row">
                    <div class="col-lg-12">
                        <input type="hidden" asp-for="UserId" />

                        <div class="form-group">
                            <label>Username</label>
                            <input asp-for="@Model.Username" class="form-control" disabled />
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input asp-for="@Model.Email" class="form-control" disabled />
                        </div>

                    </div>
                </div>

            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <a asp-action="Add" asp-route-userid="@Model.UserId" class="btn btn-outline-primary"><i class="fa fa-plus"></i> &nbsp; Add</a>
            </div>
            <div class="card-body">

                <div class="row">
                    <div class="col-lg-12">
                        <table class="table table-bordered">
                            <tr>
                                <th>Name</th>
                                <th></th>
                            </tr>

                            @for (var i = 0; i < Model.Roles.Count; i++)
                            {
                                var row = Model.Roles[i];
                                <tr>
                                    <td>@row.Name</td>
                                    <td>
                                        <a asp-action="Delete" asp-route-roleid="@row.Id" asp-route-userid="@Model.UserId" class="btn btn-outline-danger">Delete</a>
                                    </td>
                                </tr>
                            }

                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

